<LevelObject>:
    canvas:
        Rectangle:
            size: self.size
            source: 'img/2/bg.jpg'
    ToolBoxBar:
        isToolBoxBar: True
    ShapeOne:
        shapeId: 1
        shapeIsActive: True
        shapeIsTool: False
        center: 0 + root.width * 0.3, root.height * 0.85
    ShapeTwo:
        shapeId: 2
        shapeIsActive: True
        shapeIsTool: False
        center: 0 + root.width * 0.3, root.height * 0.65
    ShapeThree:
        shapeId: 3
        shapeIsActive: True
        shapeIsTool: False
        center: 0 + root.width * 0.3, root.height * 0.45
    ShapeOneTool:
        shapeId: 1
        shapeIsActive: True
        shapeIsTool: True
        shapeCenter: 0 + root.width * 0.2, root.height * 0.15
        center: 0 + root.width * 0.2, root.height * 0.15
    ShapeTwoTool:
        shapeId: 2
        shapeIsActive: True
        shapeIsTool: True
        shapeToolNo: 2
        shapeCenter: 0 + root.width * 0.4, root.height * 0.15
        center: 0 + root.width * 0.4, root.height * 0.15
    ShapeThreeTool:
        shapeId: 3
        shapeIsActive: True
        shapeIsTool: True
        shapeCenter: 0 + root.width * 0.6, root.height * 0.15
        center: 0 + root.width * 0.6, root.height * 0.15
    LevelUpGimmick:
        size: root.height * 0.2, root.height * 0.2
        center: 0 + root.width * 0.6, root.height * 0.7
        opacity: 0
        isGimmick: True
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'img/2/ufo.png'