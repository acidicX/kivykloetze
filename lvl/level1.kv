<LevelObject>:
    canvas:
        Rectangle:
            size: self.size
            source: 'img/1/bg.jpg'
    ToolBoxBar:
        isToolBoxBar: True
    ShapeOne:
        shapeId: 1
        shapeIsActive: True
        shapeIsTool: False
        center: 0 + root.width * 0.7, root.height * 0.62
    ShapeTwo:
        shapeId: 2
        shapeIsActive: True
        shapeIsTool: False
        center: 0 + root.width * 0.7, root.height * 0.42
    ShapeOneTool:
        shapeId: 1
        shapeIsActive: True
        shapeIsTool: True
        shapeCenter: 0 + root.width * 0.4, root.height * 0.15
        center: 0 + root.width * 0.4, root.height * 0.15
    ShapeTwoTool:
        shapeId: 2
        shapeIsActive: True
        shapeIsTool: True
        shapeCenter: 0 + root.width * 0.7, root.height * 0.15
        center: 0 + root.width * 0.7, root.height * 0.15
    LevelUpGimmick:
        size: root.height * 0.15, root.height * 0.15
        center: 0 + root.width * 0.1, root.height * 0.4
        opacity: 0
        isGimmick: True
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'img/1/schaf1.png'
    LevelUpGimmick:
        size: root.height * 0.1, root.height * 0.1
        center: 0 + root.width * 0.3, root.height * 0.37
        opacity: 0
        isGimmick: True
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'img/1/schaf2.png'
    LevelUpGimmick:
        size: root.height * 0.1, root.height * 0.1
        center: 0 + root.width * 0.9, root.height * 0.37
        opacity: 0
        isGimmick: True
