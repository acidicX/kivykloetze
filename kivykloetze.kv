#:kivy 1.8
<SplashScreen>:
    pos: 0, 0
    opacity: 0
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/splash.png'

<GameFinishedMessage>:
    opacity: 0
    canvas:
        Color:
            rgba: 1, 1, 1, 0.75
        Rectangle:
            pos: root.x + self.width * 0.25, root.center_y - self.height * 0.075
            size: self.width * 0.5, self.height * 0.15
    Label:
        text: 'Congratz! You finished the Game!\nWe will restart in 10 seconds.'
        font_size: sp(root.width / 50)
        color: 0, 0, 0, 1
        center: root.center

<BoxenSchieber>:
    pos: 0, 0
    
<LevelObject>:
    size: root.size
    pos: 0, 0
    center: root.center

<ToolBoxBar>:
    canvas:
        Color:
            rgba: 0, 0, 0, 0.25
        Rectangle:
            pos: 0, 0
            size: self.width, self.height * 0.3