#:kivy 1.8

<LevelUpMessage>:
    opacity: 0
    canvas:
        Color:
            rgba: 1, 1, 1, 0.8
        Ellipse:
            pos: root.center_x - self.width * 0.1, root.center_y - self.width * 0.1
            size: self.width * 0.2, self.width * 0.2
    Label:
        text: 'Level Up!'
        font_size: sp(root.width / 50)
        color: 0, 0, 0, 1
        center: root.center

<GameFinishedMessage>:
    opacity: 0
    canvas:
        Color:
            rgba: 1, 1, 1, 0.75
        Rectangle:
            pos: root.x + self.width * 0.25, root.center_y - self.height * 0.1
            size: self.width * 0.5, self.height * 0.2
    Label:
        text: 'Congratz! You finished the Game!\nWe will restart in 5 seconds.'
        font_size: sp(root.width / 50)
        color: 0, 0, 0, 1
        center: root.center

<BoxenSchieber>:
    pos: 0, 0
    
<LevelObject>:
    size: root.size
    pos: 0, 0
    center: root.center

<ToolBoxBar>:
    canvas:
        Color:
            rgba: 0, 0, 0, 0.25
        Rectangle:
            pos: 0, 0
            size: self.width, self.height * 0.3