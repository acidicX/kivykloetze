#:kivy 1.8
#:import window kivy.core.window

<ShapeCircle>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/mask_circle.png'
            
<ShapeQuad>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/mask_square.png'

<ShapeTriangle>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/mask_triangle.png'

<ShapePolygon>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/mask_polygon.png'

<ShapeCircleTool>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/tool_circle.png'

<ShapeQuadTool>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/tool_square.png'

<ShapeTriangleTool>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/tool_triangle.png'

<ShapePolygonTool>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/tool_polygon.png'

<LevelUpMessage>:
    opacity: 0
    canvas:
        Color:
            rgba: 1, 1, 1, 0.8
        Ellipse:
            pos: root.center_x - self.width * 0.1, root.center_y - self.width * 0.1
            size: self.width * 0.2, self.width * 0.2
    Label:
        text: 'Level Up!'
        font_size: sp(root.width / 50)
        color: 0, 0, 0, 1
        center: root.center

<GameFinishedMessage>:
    opacity: 0
    canvas:
        Color:
            rgba: 1, 1, 1, 0.75
        Rectangle:
            pos: root.x + self.width * 0.25, root.center_y - self.height * 0.1
            size: self.width * 0.5, self.height * 0.2
    Label:
        text: 'Congratz! You finished the Game!\nWe will restart in 5 seconds.'
        font_size: sp(root.width / 50)
        color: 0, 0, 0, 1
        center: root.center

<BoxenSchieber>:
    pos: 0, 0
    
<LevelObject>:
    size: root.size
    pos: 0, 0
    center: root.center

<ToolBoxBar>:
    canvas:
        Color:
            rgba: 0, 0, 0, 0.25
        Rectangle:
            pos: 0, 0
            size: self.width, self.height * 0.3